    <script>
// ===== Feather Icons Initialization =====
document.addEventListener('DOMContentLoaded', function() {
    feather.replace();
});

// ===== Navigation Scroll Effect =====
const navbar = document.querySelector('.navbar');
let lastScroll = 0;

window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;
    
    if (currentScroll > 100) {
        navbar.style.background = 'rgba(13, 25, 41, 0.98)';
        navbar.style.boxShadow = '0 2px 20px rgba(0,0,0,0.1)';
    } else {
        navbar.style.background = 'rgba(13, 25, 41, 0.95)';
        navbar.style.boxShadow = 'none';
    }
    
    lastScroll = currentScroll;
});

// ===== Smooth Scroll for Navigation Links =====
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function(e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
            const offset = 120; // Account for fixed nav and ticker
            const targetPosition = target.offsetTop - offset;
            window.scrollTo({
                top: targetPosition,
                behavior: 'smooth'
            });
        }
    });
});

// ===== Animated Number Counter =====
const animateNumbers = () => {
    const numbers = document.querySelectorAll('.stat-number');
    
    numbers.forEach(number => {
        const target = parseFloat(number.getAttribute('data-target'));
        const suffix = number.getAttribute('data-suffix') || '';
        const duration = 2000;
        const increment = target / (duration / 16);
        let current = 0;
        
        const updateNumber = () => {
            current += increment;
            if (current < target) {
                if (target < 10) {
                    number.textContent = current.toFixed(2) + suffix;
                } else {
                    number.textContent = Math.floor(current) + suffix;
                }
                requestAnimationFrame(updateNumber);
            } else {
                if (target < 10) {
                    number.textContent = target.toFixed(2) + suffix;
                } else {
                    number.textContent = target + suffix;
                }
            }
        };
        
        updateNumber();
    });
};

// ===== Intersection Observer for Animations =====
const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -100px 0px'
};

const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
        if (entry.isIntersecting) {
            entry.target.classList.add('animate');
            
            // Trigger number animation for hero stats
            if (entry.target.classList.contains('hero-stats')) {
                animateNumbers();
            }
        }
    });
}, observerOptions);

// Observe elements for animation
document.querySelectorAll('.hero-stats').forEach(el => {
    observer.observe(el);
});

// ===== Communication Style Chart =====
const ctx = document.getElementById('communicationChart');
if (ctx) {
    const communicationChart = new Chart(ctx.getContext('2d'), {
        type: 'scatter',
        data: {
            datasets: [
                {
                    label: 'Your Communication Style',
                    data: [{x: -1, y: 0}], // Analytical position
                    backgroundColor: '#FFB700',
                    borderColor: '#FF6B35',
                    borderWidth: 3,
                    pointRadius: 15,
                    pointHoverRadius: 20
                },
                {
                    label: 'Peer Responses',
                    data: [
                        {x: 3, y: -5},  // Driver
                        {x: -1, y: -1}, // Analytical
                        {x: 5, y: 3}    // Expressive
                    ],
                    backgroundColor: 'rgba(30, 58, 95, 0.6)',
                    borderColor: '#1E3A5F',
                    borderWidth: 2,
                    pointRadius: 10,
                    pointHoverRadius: 12
                },
                {
                    label: 'Average BCS',
                    data: [{x: 2, y: -2.5}],
                    backgroundColor: '#FF6B35',
                    borderColor: '#FFB700',
                    borderWidth: 2,
                    pointRadius: 12,
                    pointHoverRadius: 15,
                    pointStyle: 'triangle'
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                title: {
                    display: true,
                    text: 'Behavioral Communication Styles Analysis',
                    font: {
                        size: 16,
                        family: "'Crimson Text', serif",
                        weight: 600
                    },
                    color: '#0D1929'
                },
                legend: {
                    display: true,
                    position: 'bottom',
                    labels: {
                        font: {
                            family: "'Inter', sans-serif",
                            size: 12
                        },
                        padding: 15,
                        usePointStyle: true
                    }
                }
            },
            scales: {
                x: {
                    title: {
                        display: true,
                        text: 'Proactivity ‚Üí',
                        font: {
                            size: 14,
